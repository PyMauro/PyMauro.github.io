---
import Header from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Coin from "../components/Coin.astro";
import CardBtn from "../components/buttons/CardBtn.astro";
---

<Layout title="First Tailwind ">
	<main>
		<!--TODO: Header and nav Section  -->

		<Header />
		<section class="header">
			<img src="img/hero.jpg" alt="" />
		</section>

		<!--TODO: Divisor and button section -->
		<section>
			<div class="bg-wave-pattern h-6 bg-repeat-x relative -top-2"></div>
			<div
				class="bg-wave-pattern-dots text-center p-4 flex md:flex-row flex-col gap-3 justify-center"
			>
				<a
					href="#"
					class="inline-block py-3 px-16 bg-black text-white font-bold border-transparent border-8 text-2xl rounded-3xl hover:border-gray-200 hover:bg-white hover:text-black transition duration-200"
				>
					Buy Now</a
				>
				<a
					href="#"
					class="inline-block py-3 px-16 bg-red-500 text-white font-bold border-transparent border-8 text-2xl rounded-3xl hover:border-gray-200 hover:bg-white hover:text-black transition duration-200"
				>
					Watch the Trailer</a
				>
			</div>

			<div class="bg-wave-pattern bg-repeat-x h-6 relative top-2"></div>
		</section>

		<!--TODO: Cards Section -->
		<section class="bg-pattern-characters-red py-28">
			<div class="lg:container mx-auto md:flex gap-5 md:w-full p-3">
				<!--TODO: Left Section  -->
				<div
					class="left bg-character-mario bg-no-repeat bg-contain bg-top w-5/6 md:w-1/2 pt-52 mx-auto"
				>
					<!--TODO: Card -->
					<div
						class="card text-center bg-white 2xl:w-5/6 mx-auto mt-72 rounded-2xl overflow-hidden xl:w-4/5"
					>
						<div class="cover bg-black">
							<video
								src="videos/video01.mp4"
								autoplay
								loop
								muted></video>
						</div>
						<div
							class="content bg-wave-pattern bg-repeat-x relative -top-3"
						>
							<h3 class="font-black text-4xl py-10">
								Play Together
							</h3>
							<p class="text-xl">
								Work with (or aganist) your friends and family*
							</p>
							<CardBtn text="Watch The Trailer" />
						</div>
						<div class="dots flex justify-between p-4">
							<div class="dot h-3 w-3 bg-blue-600 rounded-full">
							</div>
							<div class="dot h-3 w-3 bg-blue-600 rounded-full">
							</div>
						</div>
					</div>
					<!--TODO: END of Card -->
				</div>
				<!--TODO: End Left Size  -->

				<!--TODO: Right Size -->
				<div class="right w-5/6 md:w-1/2 text-center mx-auto">
					<!--* Title  -->

					<h2 class="font-black text-white text-6xl py-8">
						Avaiable Now
					</h2>

					<!--* Subtitle -->
					<p
						class="font-bold text-white text-2xl mx-auto py-10 w-4/5"
					>
						Team up for a paws-itievely adorable adventure!
					</p>

					<!--*Content -->
					<p class="text-white mx-auto w-4/5">
						Bowser is up to his old tricks again and only Mario and
						his friends can save the day! Use power-ups like the
						Super Bell, which grants catlike abilities like climbing
						and scratching, to overcome Bowser and his minions.
					</p>

					<!--TODO: Card -->
					<div
						class="card text-center bg-white 2xl:w-3/5 mx-auto mt-32 rounded-2xl overflow-hidden xl:w-4/5"
					>
						<!--* Video -->

						<div class="cover bg-black">
							<video
								src="videos/video02.mp4"
								autoplay
								loop
								muted></video>
						</div>

						<!--* Wave Divisor -->

						<!--* Text Content -->
						<div
							class="content bg-wave-pattern bg-repeat-x relative -top-3"
						>
							<!--* Card Title  -->

							<h3 class="font-black text-4xl py-10">Explore</h3>

							<!--* Card Subtitle -->
							<p class="text-xl">
								Explore the Biggest Fantasy History
							</p>

							<!--* Card Button -->
							<CardBtn text="Watch The Trailer" />
						</div>
						<!--* Decoration bottom dots -->

						<div class="dots flex justify-between p-4">
							<div class="dot h-3 w-3 bg-blue-600 rounded-full">
							</div>
							<div class="dot h-3 w-3 bg-blue-600 rounded-full">
							</div>
						</div>
					</div>
					<!--TODO: END of Card -->
				</div>
			</div>
			<!--TODO: FOOTER section -->
			<div
				class="footer text-center flex justify-center gap-9 pt-10 w-auto"
			>
				<Coin add="md:block" />
				<Coin add="md:block" />
				<Coin add="xsm:block" />
				<Coin add="xsm:block" />
				<Coin add="xsm:block" />
			</div>
		</section>
		<section class="bg-yellow-dots">
			<div class="bg-wave-pink h-6 relative bg-repeat-x -top-4"></div>
			<div
				class="xsm:w-full sm:container w-2/3 mx-auto md:flex block justify-center items-center text-center py-6"
			>
				<div class="left xl:w-1/3 lg:w-1/2 p-5">
					<h3
						class="text-yellow-900 font-black xsm:text-3xl sm:text-4xl"
					>
						Cat <br /> Transformation <br /> Center
					</h3>
					<p class="py-4 text-xl">
						We're not kitten-transform into a cat-tastic new you!
					</p>
					<p>
						<CardBtn text="Meow!" />
					</p>
				</div>
				<div class="right xl:w-2/3 lg:w-1/2">
					<img src="img/activity_img3.png" alt="" class="md:w-full" />
				</div>
			</div>
		</section>
		<section class="bg-black">
			<div class="bg-wave-pattern bg-repeat-x h-6 relative -top-4"></div>
			<div class="container mx-auto text-center py-10 w-2/3">
				<div class="pb-5">
					<CardBtn text="Customer Support" />
				</div>
				<div class="text-white">
					<p class="py-2">
						*Additional games,systems and/or accesories may be
						required for multiplayer mode
					</p>
					<p class="py-2">
						** Nintendo Switch Online membership (sold separately)
						and Nintendo Account required for online features. Not
						available in all countries. Internet access required for
						online features. A Nintendo Account is required to
						receive and redeem My Nintendo points.
					</p>
					<p class="py-2">
						Game, systems, some accessories and amiibo sold
						separately.
					</p>
					<p class="py-2">
						Â©2013-2021 Nintendo. Super Mario and Nintendo Switch are
						trademarks of Nintendo.
					</p>
				</div>
			</div>
		</section>
	</main>
</Layout>
